{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"],
      "@actions/*": ["client/actions/*"],
      "@components/*": ["client/components/*"],
      "@constants/*": ["./constants/*"],
      "@constants-client/*": ["client/constants/*"],
      "@forms/*": ["./client/components/form/*"],
      "@helpers/*": ["./lib/helpers/*"],
      "@models/*": ["./model/*"],
      "@reducers/*": ["client/reducers/*"],
      "@selectors/*": ["client/selectors/*"],
      "@lib/*": ["./lib/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
